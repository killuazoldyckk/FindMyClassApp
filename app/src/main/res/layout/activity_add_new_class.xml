<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context=".BookingClassActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">

        <ImageView
            android:id="@+id/exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/exit_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/cdImageView" />

        <TextView
            android:id="@+id/rectangle_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:text="@string/sks_1"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:background="@drawable/rectangle_1"/>

        <TextView
            android:id="@+id/set_ruang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_1"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Masukkan Nama Ruang"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"/>

        <Spinner
            android:id="@+id/dropdown_ruang"
            android:entries="@array/ruangan"
            android:layout_width="116dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/set_ruang"
            android:layout_marginTop="180dp"
            android:layout_marginStart="14dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_dropdown"
            android:dropDownVerticalOffset="40dp"/>

        <TextView
            android:id="@+id/set_matkul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/set_ruang"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Masukkan Nama Matkul"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextMatkul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan matkul disini"
            android:minHeight="48dp"
            android:padding="5dp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:textColorHint="@color/lightblue"
            android:background="@drawable/white_bg"
            app:layout_constraintTop_toTopOf="@id/set_matkul"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:id="@+id/set_hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/editTextMatkul"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Masukkan Hari"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

        <Spinner
            android:id="@+id/dropdown_hari"
            android:entries="@array/hari"
            android:layout_width="116dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toTopOf="@id/editTextMatkul"
            app:layout_constraintStart_toEndOf="@+id/set_ruang"
            android:layout_marginTop="76dp"
            android:layout_marginStart="14dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_dropdown"
            android:dropDownVerticalOffset="40dp"/>

        <TextView
            android:id="@+id/set_waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/set_hari"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Masukkan Jam"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextWaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan jam disini"
            android:minHeight="48dp"
            android:padding="5dp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:textColorHint="@color/lightblue"
            android:background="@drawable/white_bg"
            app:layout_constraintTop_toTopOf="@id/set_waktu"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:id="@+id/set_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/editTextWaktu"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Masukkan Status"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

        <Spinner
            android:id="@+id/dropdown_status"
            android:entries="@array/status"
            android:layout_width="116dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toTopOf="@id/editTextWaktu"
            app:layout_constraintStart_toEndOf="@+id/set_ruang"
            android:layout_marginTop="76dp"
            android:layout_marginStart="14dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_dropdown"
            android:dropDownVerticalOffset="40dp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/booking_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/set_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:paddingHorizontal="17dp"
            android:text="Booking New Class"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:background="@drawable/bookingbg"
            android:textAllCaps="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

